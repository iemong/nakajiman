pc-layout()
  @media (min-width $pc_min_width)
    {block}

sp-layout()
  @media (max-width ($pc_min_width - 1))
    {block}

resetInput()
  padding: 0;
  border: none;
  border-radius: 0;
  outline: none;
  background: none;


resetTextarea()
  -webkit-appearance: none;
  -moz-appearance: none;
  appearance: none;
  resize: none;
  padding: 0;
  border: 0;
  outline: none;
  background: transparent;

resetButton()
  background-color transparent
  border none
  cursor pointer
  outline none
  padding 0
  appearance none
  -webkit-tap-highlight-color transparent
